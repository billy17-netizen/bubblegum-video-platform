# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Cloudinary (for video/image upload)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Bunny CDN (optional, for video streaming)
BUNNY_API_KEY="your-bunny-api-key"
BUNNY_STORAGE_API_KEY="your-storage-api-key"
BUNNY_LIBRARY_ID="your-library-id"
BUNNY_STORAGE_ZONE="your-storage-zone"
BUNNY_REGION="sg"
BUNNY_PULL_ZONE="your-pull-zone.b-cdn.net"
BUNNY_STORAGE_PULL_ZONE="your-storage-pull-zone.b-cdn.net"
NEXT_PUBLIC_BUNNY_PULL_ZONE="your-pull-zone.b-cdn.net"
NEXT_PUBLIC_BUNNY_STORAGE_ZONE="your-storage-zone"
NEXT_PUBLIC_BUNNY_STORAGE_PULL_ZONE="your-storage-pull-zone.b-cdn.net"

# Admin Setup
ADMIN_DEFAULT_PASSWORD="admin123"

# Development
NODE_ENV="development"
PORT="3000"

# Optional
DISABLE_ESLINT_PLUGIN="false"
DISABLE_TYPE_CHECK="false"
ENABLE_CLOUD_COMPRESSION="false" 